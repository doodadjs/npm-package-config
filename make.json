{
	version: "0.10.0",
	stage: "a",
	mjs: false, // Not ready for MJS (ES6 modules)
	dependencies: [],
	modules: [],
	tasks: {
		make: {
			operations: [
				{
					class: "Make.Task",
					name: "lint"
				},
				{
					class: "Make.Folder.Copy",
					source: "%SOURCEDIR%/test",
					destination: "%PACKAGEDIR%/test"
				},
				{
					class: "Make.Folder.Delete",
					destination: "%PACKAGEDIR%/test/test_app/node_modules.rename_me"
				},
				{
					class: "Make.File.Delete",
					source: "%PACKAGEDIR%/test/test_app/npmrc.rename_me"
				},
				{
					class: "Make.If",
					condition: "!tools.Files.existsSync(taskData.parseVariables('%PACKAGEDIR%/test/test_app/node_modules', {isPath: true}))",
					operations: [
						{
							class: "Make.Spawn.File",
							source: "npm",
							shell: "true",
							args: ['install'],
							target: "%PACKAGEDIR%/test/test_app/"
						}
					]
				},
				{
					class: "Make.Folder.Copy",
					source: "%SOURCEDIR%/test/test_app/node_modules.rename_me",
					destination: "%PACKAGEDIR%/test/test_app/node_modules"
				},
				{
					class: "Make.File.Copy",
					source: "%SOURCEDIR%/test/test_app/npmrc.rename_me",
					destination: "%PACKAGEDIR%/test/test_app/.npmrc"
				}
			]
		},
		test: {
			operations: [
				{
					class: "Make.Task",
					name: "test_app"
				},
				{
					class: "Make.Task",
					name: "test_cli"
				}
			]
		},
		"test_app": {
			"operations": [
				{
					class: "Make.Spawn.Node",
					source: "%PACKAGEDIR%/test/test_app/main.js",
					target: "%PACKAGEDIR%/test/test_app/"
				}
			]
		},
		"test_cli": {
			"operations": [
				{
					class: "Make.Spawn.Node",
					source: "%PACKAGEDIR%/test/test_app/lib/cli.js",
					target: "%PACKAGEDIR%/test/test_app/lib/"
				}
			]
		},
	}
}